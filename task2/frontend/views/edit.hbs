{{>header}}
{{>nav}}
{{#if data }}
<div class="container-fluid" style="margin-top:30px">
<form method="post"  action="/editTask/:id">
<div class="row">
  <div class="form-group col-3">
    <label for="id">Task iD:</label>
    <input type="number" id ="id" required readonly autofocus name="id" placeholder="Enter id" value ="{{data.id}}">
   </div>
<div class="form-group col-3">
  <label for="title">Task Title:</label>
  <input type="text" id ="title" required  name="title" placeholder="Enter Title"  value ="{{data.title}}">
 </div>
 <div class="form-group col-2">
  <label for="select">Task Type: </label>
   <select id="select" name="select" value="{{data.select}}">
  <option selected hidden  value="{{data.select}}">{{data.select}}</option>
   <option  value="type1">Type 1</option>
   <option  value="type2">Type 2</option>
   <option  value="type3">Type 3</option>
   </select>
</div>
</div>
<div class="row">
 <div class="form-group col-6">
  <label for="content">Task Content:</label>
  <textarea required id ="content"class="form-control" name="content" rows="4"  placeholder="Enter Content"> {{data.content}}</textarea>
 </div>
 </div>
 <button type="submit" class="btn btn-primary col-3 text-center">Submit</button>
</div>
</form>
{{/if}}
